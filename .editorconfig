# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = crlf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = false

[*.json]
trim_trailing_whitespace = true

[*.xml]
indent_style = tab
